<% if(errors.length > 0) { %>
    <div class="col-8 mt-3">
        <div class="alert alert-danger">
            <% errors.forEach(error => { %> 
                <%= error  %><br> 
            <% }); %> 
        </div>
    </div>
<% } %> 

<% if(success.length > 0) { %>
    <div class="col-8 mt-3">
        <div class="alert alert-success">
            <% success.forEach(success => { %> 
                <%= success  %><br> 
            <% }); %> 
        </div>
    </div>
<% } %> 